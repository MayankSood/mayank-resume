<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .mainPanel {
            width: 100%;
            text-align: center;
        }

        .image {
            width: 250px;
            border-radius: 50%;
            margin: 90px 30px 30px;
        }

        .name {
            font-size: 35px;
            font-weight: bold;
        }

        .hrzLine {
            width: 70px;
            height: 0;
            border-radius: 5px;
            margin-top: 9px;
            border: 2px solid;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel ui:field="mainPanel" styleName="{style.mainPanel}">
            <g:Image ui:field="image" addStyleNames="{style.image}"/>
            <g:HTMLPanel addStyleNames="{style.name}">Mayank Sood</g:HTMLPanel>
            <div style="display: flex;width: 197px;margin: auto;">
                <div class="{style.hrzLine}" />
                <div style="font-size: 100px;line-height: 30px;user-select:none;">â‹†</div>
                <div class="{style.hrzLine}" />
            </div>
            <g:HTMLPanel>Java Developer - Enterprise Application</g:HTMLPanel>
            <g:HTMLPanel>Android Developer - Location Based Services</g:HTMLPanel>
            <g:HTMLPanel>Big Data &amp; Analytics</g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>