<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="globalCss" type="com.mayanksood.resume.client.css.GlobalCssBundle" />
    <g:HTMLPanel styleName="{globalCss.layout.mainPanel}">
        <style is="custom-style">
            @media (max-width: 584px) {
                .dfl-status-bar {
                    flex-flow: column;
                    height: 150px;
                }
            }
        </style>
        <g:HTMLPanel ui:field="statusBar" addStyleNames="{globalCss.layout.statusBar} dfl-status-bar">
            <g:HTMLPanel styleName="{globalCss.layout.title}">Mayank Sood</g:HTMLPanel>
            <div class="{globalCss.layout.menuContainer}">
                <g:HTMLPanel styleName="{globalCss.layout.menuItem}" ui:field="about">ABOUT</g:HTMLPanel>
                <g:HTMLPanel styleName="{globalCss.layout.menuItem}" ui:field="portfolio">PORTFOLIO</g:HTMLPanel>
                <g:HTMLPanel styleName="{globalCss.layout.menuItem}" ui:field="contact">CONTACT</g:HTMLPanel>
            </div>
        </g:HTMLPanel>
        <g:SimplePanel ui:field="contentPanel" addStyleNames="{globalCss.layout.contentPanel}"/>
    </g:HTMLPanel>
</ui:UiBinder>