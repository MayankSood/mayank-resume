<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .statusBar {
            height: 100px;
            width: 100%;
            position: fixed;
            top: 0px;
            left: 0px;
            background-color: #2C3E50;
            color: white;
            display: flex;
        }

        .contentPanel {
            margin-top: 100px;
            overflow: scroll;
        }

        .mainPanel {
            position: fixed;
            top: 0px;
            left: 0px;
            width: 100%;
            height: 100%;
            background: #E74C3C;
            color: white;
            font-family: 'Avenir Next',sans-serif;
        }

        .title {
            margin: 31px;
            font-size: 35px;
            font-weight: bold;
        }

        .menuContainer {
            display: flex;
            margin-left: auto;
            margin-top: auto;
            margin-bottom: 14px;
        }

        .menuItem {
            cursor: pointer;
            margin-right: 20px;
            padding: 5px;
            transition: border-bottom 0.3s ease-out;
            border-bottom: 2px solid transparent;
            font-size: 14px;
            font-weight: bold;
        }

        .menuItem:hover {
            border-bottom: 2px solid currentColor;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.mainPanel}">
        <g:HTMLPanel ui:field="statusBar" addStyleNames="{style.statusBar}">
            <g:HTMLPanel styleName="{style.title}">Mayank Sood</g:HTMLPanel>
            <div class="{style.menuContainer}">
                <g:HTMLPanel styleName="{style.menuItem}">PORTFOLIO</g:HTMLPanel>
                <g:HTMLPanel styleName="{style.menuItem}">ABOUT</g:HTMLPanel>
                <g:HTMLPanel styleName="{style.menuItem}">CONTACT</g:HTMLPanel>
            </div>
        </g:HTMLPanel>
        <g:SimplePanel ui:field="contentPanel" addStyleNames="{style.contentPanel}"/>
    </g:HTMLPanel>
</ui:UiBinder>